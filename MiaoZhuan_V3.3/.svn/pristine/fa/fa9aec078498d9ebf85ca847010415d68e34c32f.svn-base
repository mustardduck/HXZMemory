#import "UIView+MZExtension.h"

@implementation UIView (MZExtension)
- (void)setMZ_x:(CGFloat)MZ_x
{
    CGRect frame = self.frame;
    frame.origin.x = MZ_x;
    self.frame = frame;
}

- (CGFloat)MZ_x
{
    return self.frame.origin.x;
}

- (void)setMZ_y:(CGFloat)MZ_y
{
    CGRect frame = self.frame;
    frame.origin.y = MZ_y;
    self.frame = frame;
}

- (CGFloat)MZ_y
{
    return self.frame.origin.y;
}

- (void)setMZ_w:(CGFloat)MZ_w
{
    CGRect frame = self.frame;
    frame.size.width = MZ_w;
    self.frame = frame;
}

- (CGFloat)MZ_w
{
    return self.frame.size.width;
}

- (void)setMZ_h:(CGFloat)MZ_h
{
    CGRect frame = self.frame;
    frame.size.height = MZ_h;
    self.frame = frame;
}

- (CGFloat)MZ_h
{
    return self.frame.size.height;
}

- (void)setMZ_size:(CGSize)MZ_size
{
    CGRect frame = self.frame;
    frame.size = MZ_size;
    self.frame = frame;
}

- (CGSize)MZ_size
{
    return self.frame.size;
}

- (void)setMZ_origin:(CGPoint)MZ_origin
{
    CGRect frame = self.frame;
    frame.origin = MZ_origin;
    self.frame = frame;
}

- (CGPoint)MZ_origin
{
    return self.frame.origin;
}
@end
